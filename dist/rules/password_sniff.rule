/*

  Clear password (local) interception.

*/



rule password_sniff
{

  state init {
    if (.promisc.action == "enter")
      goto promisc;
  }

  state promisc {
    $interface = .promisc.interface;

    if (.promisc.action == "left" && .promisc.interface == $interface)
      goto normal_end;

    if (.xinetd.action == "START" && .xinetd.service == "telnet")
      goto telnet;

  }

  state telnet {
    print("warning, telnet while someone is sniffing");
  }

  state normal_end {
  }

}
